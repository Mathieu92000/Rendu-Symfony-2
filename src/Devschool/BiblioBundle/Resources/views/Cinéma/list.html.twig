{% extends 'DevschoolBiblioBundle::layout.html.twig' %}

{% block title %}Liste des Films{% endblock %}

{% block body %}
    <h1>{{ titre|upper }} ({{ Films|length }})</h1>

    <ul class="liste">
        {% for list in Films %}
            <li>
                <h2><a href="{{ path('page_livre', {'id': film.id}) }}">{{ film.titre }}</a></h2>
                {% if film.auteur == "J. K. Rowling" %}
                    <strong>{{ film.auteur }}</strong>
                {% else %}
                    <span>{{ film.auteur }}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}