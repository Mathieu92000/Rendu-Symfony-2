{% extends 'DevschoolBiblioBundle::layout.html.twig' %}

{% block title %}{{ film.titre }}{% endblock %}

{% block body %}
    <h1>{{ film.titre }}</h1>
    <span>({{ film.genre.nom }})</span><br />
    <br />
    <span>Ecrit par {{ film.auteur }}</span><br />
    <br />
    <span>Sortie le {{ film.dateParution|date('d/m/Y') }}</span>

    <p>{{ film.description }}</p>

    <span>Nombre de pages : {{ film.nombrePages }}</span>


    <p><a href="{{ path('page_livres') }}">Retour</a></p>
{% endblock %}